<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'users/user', user: @user %>
      <h2>New post</h2>
      <%= render 'cats/cat', cat: @cat %>
    </div>
    <div class="col-md-7 offset-md-1">
  	  <table class="table table-sm user-index">
	  	  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
  	    </thead>
  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= image_tag user.get_profile_image(50,50) %></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>
  	  </table>
  	</div>
  </div>